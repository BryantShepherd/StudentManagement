doctype html
head
    meta(charset='UTF-8')
    title Home
    style
        include ../public/stylesheets/home.css
body
    .search-box
        form(action="http://127.0.0.1:5000/students" method="get")
            label Student ID
            br
            input(type="text" name="id" placeholder="student ID here" required)
            input(type="submit" value="Search" id="sign-in-btn")
    table
        thead
            tr
                th id
                th name
                th birth
                th email
                th major
                th gpa
                th
                th
        tbody
        each student in students
            tr
                td= student.id
                td= student.name
                td= student.birth.toISOString().slice(0, 10)
                td= student.email
                td= student.major
                td= student.gpa
                td(class="update")
                    a Update
                td(class="delete")
                    a Delete
    button(id="add-btn" onclick="window.location.href='http://127.0.0.1:5000/students/add'") Add Student
    script
        include ../public/javascripts/home.js