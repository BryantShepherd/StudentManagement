doctype html
head
    meta(charset='UTF-8')
    title Login
    link(rel='stylesheet' href='./stylesheets/style.css')
form(action="http://127.0.0.1:5000/students" method="get")
    label Student ID
    input(type="text" name="id" placeholder="student ID here" required)
    input(type="submit" value="Search" id="sign-in-btn")
table
    thead
        tr
            th id
            th name
            th birth
            th email
            th major
            th gpa
    tbody
    each student in students
        tr
            td= student.id
            td= student.name
            td= student.birth
            td= student.email
            td= student.major
            td= student.gpa